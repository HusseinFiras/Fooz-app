{
    "name": "Fooz Luxury Price Checker",
    "short_name": "Fooz",
    "version": "1.0.0",
    "description": "Tracks and compares product prices across luxury retail websites",
    "manifest_version": 2,
    "background": {
        "scripts": ["assets/product_detector.js", "assets/extractors_loader.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["assets/product_detector.js"]
        }
    ],
    "web_accessible_resources": [
        "assets/extractors_loader.js",
        "assets/mango_extractor.js"
    ],
    "permissions": [
        "<all_urls>",
        "webNavigation",
        "tabs"
    ]
}
